<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewPoiName"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageViewPoi" />

    <TextView
        android:text="TextView"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:id="@+id/textViewPoiAddress"
        android:layout_below="@+id/textViewPoiName"
        android:layout_alignStart="@+id/textViewPoiName" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageViewPoi"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>